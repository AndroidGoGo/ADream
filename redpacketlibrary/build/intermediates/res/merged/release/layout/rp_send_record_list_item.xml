<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rp_money_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size30px"
        android:layout_marginTop="@dimen/size30px">


        <TextView
            android:id="@+id/tv_money_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size45px"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_type"
            android:layout_marginLeft="@dimen/size45px"
            android:layout_marginTop="@dimen/size9px"
            android:textColor="@color/rp_text_light_grey"
            android:textSize="@dimen/font36px" />

        <TextView
            android:id="@+id/tv_dealer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_type"
            android:layout_marginLeft="@dimen/size27px"
            android:layout_marginTop="@dimen/size9px"
            android:layout_toRightOf="@id/tv_time"
            android:textColor="@color/rp_text_light_grey"
            android:textSize="@dimen/font36px" />

        <TextView
            android:id="@+id/tv_item_money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_money_type"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size45px"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px" />

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_money_type"
            android:layout_marginLeft="@dimen/size45px"
            android:layout_marginRight="@dimen/size45px"
            android:layout_marginTop="@dimen/size9px"
            android:textColor="@color/rp_text_light_grey"
            android:textSize="@dimen/font36px" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_no_head"
        style="@style/DividerStyleNoHead"
        />

    <View
        android:id="@+id/view_line"
        style="@style/DividerStyle"
        android:visibility="gone"/>
</LinearLayout>