<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/rp_money_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_item_avatar_icon"
            android:layout_width="@dimen/size120px"
            android:layout_height="@dimen/size120px"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/size30px"
            android:layout_marginLeft="@dimen/size45px"
            android:layout_marginTop="@dimen/size30px"
            android:src="@drawable/rp_avatar" />

        <TextView
            android:id="@+id/tv_money_to_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_item_avatar_icon"
            android:layout_marginLeft="@dimen/size30px"
            android:layout_toRightOf="@id/iv_item_avatar_icon"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_item_avatar_icon"
            android:layout_below="@id/tv_money_to_user"
            android:layout_marginLeft="@dimen/size30px"
            android:layout_toRightOf="@id/iv_item_avatar_icon"
            android:gravity="bottom"
            android:textColor="@color/rp_text_light_grey"
            android:textSize="@dimen/font36px" />

        <TextView
            android:id="@+id/tv_item_money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_money_to_user"
            android:layout_marginRight="@dimen/size45px"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px" />

        <TextView
            android:id="@+id/tv_best_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size45px"
            android:drawableLeft="@drawable/rp_icon_best"
            android:drawablePadding="2dp"
            android:text="@string/best_luck"
            android:textColor="@color/rp_best_luck_yellow"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        style="@style/DividerStyle"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>